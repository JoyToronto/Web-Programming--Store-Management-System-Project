@model IEnumerable<FinalProject.Models.Payment>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Payment ID</th>
            <th>Order</th>
            <th>Payment Status</th>
            <th>Payment Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PaymentID)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderID)</td>
                <td>@Html.DisplayFor(modelItem => item.PaymentStatus)</td>
                <td>@Html.DisplayFor(modelItem => item.PaymentDate)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PaymentID }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PaymentID }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PaymentID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

