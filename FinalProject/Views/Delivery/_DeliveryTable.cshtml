@model IEnumerable<FinalProject.Models.Delivery>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().OrderID)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().DeliveryStatus)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().EstimatedDeliveryDate)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstimatedDeliveryDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DeliveryID }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DeliveryID }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.DeliveryID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>




